<Application x:Class="MediaPlayerApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mediaplayerlib="clr-namespace:MediaPlayerLib;assembly=MediaPlayerLib"
             xmlns:bdrepository="clr-namespace:BusinessDataRepository;assembly=BusinessDataRepository"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <mediaplayerlib:IsSelectedConverter x:Key="selectedConverter"></mediaplayerlib:IsSelectedConverter>
        <mediaplayerlib:IsPositiveIntegerConverter x:Key="isIntConverter"></mediaplayerlib:IsPositiveIntegerConverter>
        <mediaplayerlib:HasTextConverter x:Key="hasTextConverter"></mediaplayerlib:HasTextConverter>
        <mediaplayerlib:NullImageSourceConverter x:Key="nullImageConverter"></mediaplayerlib:NullImageSourceConverter>
        <mediaplayerlib:MyMultipleConverter x:Key="multiConverter"></mediaplayerlib:MyMultipleConverter>
        <mediaplayerlib:MediaPlayer x:Key="player"></mediaplayerlib:MediaPlayer>
        <mediaplayerlib:FolderMapper x:Key="mapper"></mediaplayerlib:FolderMapper>
        <bdrepository:Repository x:Key="repository"></bdrepository:Repository>
    </Application.Resources>
</Application>
