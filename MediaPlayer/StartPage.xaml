<Page x:Class="MediaPlayerApp.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="StartPage">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Name="btnCreateNew" Content="Create new album" HorizontalAlignment="Center"  Margin="0,0,0,10" Click="btnCreateNew_Click"></Button>
            <Button Name="btnOpen" Content="View previously saved album" HorizontalAlignment="Center" Margin="0,0,0,10" Click="btnOpen_Click"></Button>
            <!--<Button Name="btnSlideShow" Content="Create slide show" HorizontalAlignment="Center" Click="btnSlideShow_Click"></Button>-->
        </StackPanel>
        
    </Grid>
</Page>
